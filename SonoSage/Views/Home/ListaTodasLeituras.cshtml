@model List<SonoSage.Models.LeituraSensor>
@{
    ViewData["Title"] = "Listar todas";
}

<div class="container">
<div class="row">
        <div class="col-md-6 offset-md-2">
            <table class="table table-striped table-light table-hover ">
                <thead>
                    <tr>
                        <th scope="col">Data da Leitura</th>
                        <th scope="col">Valor</th>
                    </tr>
                </thead>
                <tbody>
                        @foreach (LeituraSensor medicao in Model)
                        {
                        <tr>
                            <td >@medicao.DataLeitura</td>
                            <td>@medicao.Leitura</td>
                        </tr>
                        }
                </tbody>
            </table>

    </div>
    </div>
</div>
