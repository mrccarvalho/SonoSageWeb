                <nav class="nav nav-masthead justify-content-center float-md-end">
                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Grafico">Gráfico</a>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ListaTodasLeituras">Todas</a>
                </nav>
            </div>
        </header>

        <main class="px-12">

            <p></p>
            <p></p>
            <p class="lead">
                <a asp-area ="" asp-controller="Home" asp-action="Grafico" class="btn btn-lg btn-secondary fw-bold border-white bg-white">Ver Gráfico</a>
            </p>
           
                @RenderBody()
         
        </main>

        <footer class="mt-auto text-white-50">
            <p>Trabalho realizado por <a href="#" class="text-white">Ângela Silva Neiva / 3º ANO TGPSI A 2021-2024 ESHM</a>,  <a href="#" class="text-white"></a>.</p>
        </footer>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/grafico.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>



</html>
